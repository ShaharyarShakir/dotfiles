# Aliases for common commands
if command -v eza &> /dev/null; then
alias ls='eza --icons -lah --group-directories-first --git'
alias lt='eza -T --icons'
alias ll='eza -lh --icons'
alias la='eza -la --icons'
alias lsize='eza -lh --icons -s size -r'
alias lmod='eza -lh --icons -s modified'
alias lg='eza -lh --icons --git'
alias l='eza -l --icons --git -a'
else
    alias ls='ls --color=auto'
fi
# git
alias ga='git add .'
alias gc='git commit -m'
alias gs='git status'
alias glog="git log --graph --topo-order --pretty='%w(100,0,6)%C(yellow)%h%C(bold)%C(black)%d %C(cyan)%ar %C(green)%an%n%C(bold)%C(white)%s %N' --abbrev-commit"
alias gp='git push'
alias lg='lazygit'
alias gu='gitui'
alias gb='git branch-i'
# bat/cat aliases
if command -v batcat &> /dev/null; then
alias bat='batcat'
alias cat="batcat --style=grid --pager=never"
alias batn="batcat --style=number"
alias batp="batcat --paging=always"
alias batall="batcat --show-all"	
alias batfzf="fzf --preview 'batcat --style=numbers --color=always {}'"
else
alias cat='cat'
fi
# fzf 
alias fh='history | fzf'
alias fo='find . -type f | fzf'
alias vf='nvim $(fzf)'
# bash
alias vb='nvim ~/.bashrc'
alias sb='source ~/.bashrc'
# Vim / Neovim
alias vim='nvim'
alias v='nvim'
alias v.='nvim .'

# Clear screen
alias cls='clear'

